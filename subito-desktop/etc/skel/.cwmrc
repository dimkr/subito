# ~/.cwmrc: cwm configuration

# the default font
fontname "Terminus:size=10"

# default applications
command term urxvtc
command lock slock

# key bindings
bind CS-Escape "urxvtc -title htop -e htop"
bind M-F2 exec
bind 4-r exec
bind 4-l lock
bind CM-d "urxvtc -title dvtm -e dvtm"
bind CM-s "urxvtc -title Screen -e screen"

# application menu
command Vifm "urxvtc -title Vifm -e vifm"
command Links "urxvtc -title Links -e links"
command re-alpine "urxvtc -title re-alpine -e alpine"
command Snownews "urxvtc -title Snownews -e snownews"
command Irssi "urxvtc -title Irssi -e irssi"
command rTorrent "urxvtc -title rTorrent -e rtorrent"
command Calcurse "urxvtc -title Calcurse -e calcurse"
command TuDu "urxvtc -title TuDu -e tudu"
command AlsaMixer "urxvtc -title AlsaMixer -e alsamixer"
command cmus "urxvtc -title cmus -e cmus"
command UnNetHack "urxvtc -title UnNetHack -e unnethack"
command Vim "urxvtc -title Vim -e vim"
command htop "urxvtc -title htop -e htop"
